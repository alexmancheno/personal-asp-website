<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Alex Mancheno's Website</title>
    @*<link rel="stylesheet" href="bootstrap/css/bootstrap.min.css">*@
    @*<link rel="stylesheet" href="bootstrap/css/bootstrap-theme.min.css">*@
    <!-- Font Awesome -->
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
        
    <link rel="stylesheet" href="~/Content/navbar.css">
    <link rel="stylesheet" href="~/Content/Site.css" />
    @Styles.Render("~/Content/css")
    @*@Scripts.Render("~/bundles/modernizr")*@
</head>
<body style="background: -webkit-linear-gradient(to left, #3a6186 , #89253e); background: linear-gradient(to left, #C9F0DD, #89253e); color: #333333">
    <nav class="navbar navbar-default navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <!-- logo -->
                <a class="navbar-brand" href="#"><img alt="alternative text" src="~/images/a.png" /></a>
            </div>
            <div class="collapse navbar-collapse animated fadeIn" id="bs-example-navbar-collapse-1" style="height:100px;">
                <ul class="nav navbar-nav animated fadeIn text16">
                    <li><a href="/" style="padding: 23px">Home</a></li>
                    <li><a href="/about" style="padding: 23px">About Me</a></li>
                    <li><a href="/blog" style="padding: 23px">Blog</a></li>
                    <li><a href="/portfolio" style="padding: 23px">Portfolio</a></li>
                    <li><a href="/contact" style="padding: 23px">Contact Me</a></li>
                </ul>
                <ul style="float: right; padding-top: 17px;">
                    
                    <a href="https://github.com/alexmancheno" target="_blank"><i class="fa fa-github fa-2x animated fadeIn" style="padding-left: 6px; color: azure"></i></a>
                    <a href="https://www.linkedin.com/in/alexmancheno/" target="_blank"><i class="fa fa-linkedin-square fa-2x animated fadeIn" style="padding-left: 6px; color: azure;"></i></a>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
    
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Alex Mancheno</p>
        </footer>
    </div>

    @*@Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)*@
</body>
</html>
